@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}

<main class="identity-cabinet-main">
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity?.IsAuthenticated ?? false)
        {
            <form class="form-logout" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button type="submit" class="identity-btn">Click here to Logout</button>
            </form>
        }
        else
        {
            <h2>You have successfully logged out of the application.</h2>
        }
    }
</main>
