@page
@model EmailModel
@{
    ViewData["Title"] = "Manage Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
    Layout = "_Layout";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="profile-form-container">
    <form id="email-form" method="post">
        <div asp-validation-summary="All" class="text-danger" role="alert"></div>
        @if (Model.IsEmailConfirmed)
        {
            <div class="form-floating mb-3">
                <input asp-for="Email" placeholder="Please enter your email." disabled />
                    <div class="input-group-append">
                        <span class="h-100 input-group-text text-success font-weight-bold">✓</span>
                    </div>
                <label asp-for="Email" class="form-label"></label>
            </div>
        }
        else
        {
                <div class="form-floating mb-3">
                    <input asp-for="Email" placeholder="Please enter your email." disabled />
                    <label asp-for="Email" class="form-label"></label>
                </div>
        }
        <div class="form-floating mb-3">
            <input asp-for="Input.NewEmail" autocomplete="email" aria-required="true" placeholder="Please enter new email." />
            <label asp-for="Input.NewEmail" class="form-label"></label>
            <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
        </div>
        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="identity-btn">Change email</button>
        @if (!Model.IsEmailConfirmed)
        {
            <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="identity-btn">Send verification email</button>
        }

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
