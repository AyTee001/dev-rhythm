@page
@using Microsoft.AspNetCore.Mvc.Localization

@model ChangePasswordModel

@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Change password"];
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
    Layout = "_Layout";
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div>
    <form id="change-password-form" method="post">
        <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
        <div class="form-floating mb-3">
            <input asp-for="Input.OldPassword" autocomplete="current-password" aria-required="true" placeholder="@Localizer["Please enter your old password"]" />
            <label asp-for="Input.OldPassword" class="form-label"></label>
            <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.NewPassword" autocomplete="new-password" aria-required="true" placeholder="@Localizer["Please enter your new password"]" />
            <label asp-for="Input.NewPassword" class="form-label"></label>
            <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
        </div>
        <div class="form-floating mb-3">
            <input asp-for="Input.ConfirmPassword" autocomplete="new-password" aria-required="true" placeholder="@Localizer["Please confirm your new password"]"/>
            <label asp-for="Input.ConfirmPassword" class="form-label"></label>
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
        </div>
        <button type="submit" class="identity-btn">@Localizer["Update password"]</button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
