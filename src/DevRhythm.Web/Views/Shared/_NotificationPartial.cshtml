@model DevRhythm.App.DTOs.NotificationDto

<div class="toast" role="alert" aria-live="assertive" aria-atomic="true">
    <div class="toast-header">
        <span>@Model.Sender?.UserName</span>
        <small>@Model.SentAt</small>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        @Model.Message
        <br />
        @if (Model.NotificationType == DevRhythm.Core.Enums.NotificationType.VoteNotification)
        {
            <a asp-action="ShowPost" asp-controller="Post" asp-route-id="@Model.PostDto?.Id"> Post: @Model.PostDto?.Heading</a>
        }
    </div>
</div>